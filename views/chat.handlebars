{{>navbar/navbar logged-in=true chat=true}}

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Chat Room</h2>
    </div>
  </div>
</div>

<div id="chat-container">

  <div id="chat"></div>
  <div id="users"></div>
  <div id="feedback"></div>
  <form id="send-message">
    <input id="message" type="text"></input>
    <button id="send">Send</button>
  </form>
  
</div>
<div class="container">
    <form autocomplete="off">
    <input id="track-search" type="text" placeholder="Search for a song or album" />
    <button id="trackSend">Search</button>
    <input id="artist-search" type="text" placeholder="Search for an artist" />
    <button id="artistSend">Search</button>
  </form>
  <div id="widget" class="col">
    {{!-- where the widget shows up --}}
  </div>
</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.dev.js"></script>

